<?xml version="1.0"?>
<tweaks>
  <!-- change the max size of the damage param in damage_* messages to account for new health granularity -->
  <tweak version="2" name="settings/network" extension="network_settings">
      <search>
          <network/>
          <rpc/>
          <message name="damage_bullet"/>
          <param type="int" min="0" max="512"/>
      </search>
      <target mode="replace">
          <param type="int" min="0" max="8192"/>
      </target>
  </tweak>
